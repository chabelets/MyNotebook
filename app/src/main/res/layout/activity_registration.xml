<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Notebook registration"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_headline_material" />

        <EditText
            android:id="@+id/loginEditTextRegistrationActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"/>

        <EditText
            android:id="@+id/mailEditTextRegistrationActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:hint="Mail"/>

        <EditText
            android:id="@+id/passwordEditTextRegistrationActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:hint="Password"/>
        <EditText
            android:id="@+id/confirmPasswordEditTextRegistrationActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:hint="Confirm password"/>


        <Button
            android:id="@+id/registrationButtonRegistrationActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"/>

    </LinearLayout>
</LinearLayout>

